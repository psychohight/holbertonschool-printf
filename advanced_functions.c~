#include "main.h"
#include <stdlib.h>
#include <stdio.h>
#include <stdarg.h>
/**
 * convert_to_binaire - Function that convert a int to binary
 *
 * @argc: number of argument
 *
 * Return: number of byte
 */
int convert_to_binary(va_list argc)
{
unsigned int nb;
 int count = 0;
  nb = va_arg(argc, unsigned int);
  
  help_binary(nb, &count);
  return (count);
}

 
/**
 * help - Function that help for convert to binary
 *
 * @n: number to convert
 * @count: total number
 *
 */
void help_binary(unsigned int n, int *count)
{
  if (n != 0 && (n % 2 == 1))
	  {        
                help_binary(n / 2, count);
	  }
	_putchar((n % 2) + '0');
                (*count)++;
}
